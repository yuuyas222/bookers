<% if @user.errors.any? %>
    <div class = "error">
    <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  <% end %>

<h2>プロフィール編集</h2>

<%= form_for(@user) do |f| %>
    <h4>name</h4>
    <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
    <div class = "user-image">
    <h4>image</h4>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
    <h4>introduction</h4>
    <%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
<% end %>