<div class = "container">
 <div class = "body-container">
    <div class = "col-xs-3">
        <h2>User info</h2>

        <div class = "plofile-container">
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            <h3>name  <%= @user.name %></h3>
            <h3>introduction  <%= @user.introduction %></h3>
            
            <% if @user.id == current_user.id %>
            <%= link_to edit_user_path(current_user.id) do %>
                <span class= "edit btn btn-primary btn-block" "glyphicon glyphicon-wrench" aria-hidden="true"><a class="glyphicon glyphicon-wrench" aria-hidden="true"></a></span>
            <% end %>
            <% end %>
            
        </div>
    
        <section class = "single-book">
        <h2>Books</h2>
        <%= form_for (@book) do |f| %>
        <h3>Title</h3>
        <%= f.text_field :title %>
        <h3>Opinion</h3>
        <%= f.text_area :body %> 
    
        <%= f.submit 'Create Book', class: "btn btn-primary btn-block"  %>   
        <% end %>
        </section>
    </div>


<div class ="col-xs-9">
<h2>Books</h2>
    <table class = "table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
         </thead>
         <tbody>
         <% @books.each do |book| %>
            <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
         </tbody>   
    </table>


 </div> 
</div>