<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  

  <div class = "container">
  <nav class="navbar navbar-default navbar-static-top">
	<div class="container-fluid">
		<div class="navbar-header">
			<span>
				Bookers
			</span>
		</div>
		
		<div class= "navbar-right" >
    <ul class="nav navbar-nav">
     <% if user_signed_in? %>
      <li class = "glyphicon glyphicon-home" aria-hidden="true" ><%= link_to 'home', user_path(current_user.id) %></li>
			<li><a class="glyphicon glyphicon-user" aria-hidden="true" href="#"></a><%= link_to 'user', users_path %></li>
      <li><a class="glyphicon glyphicon-book" aria-hidden="true" href="#"></a><%= link_to 'book', books_path %></li>
      <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
     <% else %>
      <li> <a class = "glyphicon glyphicon-home" aria-hidden="true" href = "/">home</a></li>
      <li> <a class = "glyphicon glyphicon-home" aria-hidden="true" href = "/home/about">about</a></li>
      <li class = "glyphicon glyphicon-home" aria-hidden="true" ><%= link_to 'sign up', new_user_session_path %></li>
      <li class = "glyphicon glyphicon-home" aria-hidden="true" ><%= link_to 'login', new_user_registration_path %></li>
     <% end %>
     </ul>
			
		</div>
	</div>
  </nav>
  </div>

  

    <%= yield %>
  </body>
</html>
